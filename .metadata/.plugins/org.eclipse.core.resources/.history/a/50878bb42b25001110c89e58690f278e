		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:view="com.basf.core.view.*" creationComplete="initControl()">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.basf.core.vo.ServiceParameter;
			
			private function initControl():void {
				var sp:ServiceParameter = new ServiceParameter();
				sp.parametros.cHash="NONE";
			}
			
			private function load():void {
				grid.loadData(sp);
			}
			
			private function onDataRetrieved(event:*=null){
				if (grid.dataProvider.credit_cards.error!=null) {
					this.errorString = grid.dataProvider.credit_cards.error;
				}
			}
		]]>
	</fx:Script>
	
	<view:CoreDataGrid id="grid" serviceName="cardsListSrv" serviceType="http" loadOnCreationComplete="false" width="100%" height="100%" dataProviderNode="credit_cards.credit_card" dataRetrieved="">
		<view:columns>
			<s:ArrayList>
				<s:GridColumn headerText="Usuario" dataField="holder" width="120"/>
				<s:GridColumn headerText="Tarjeta" dataField="card_type" width="60"/>
				<s:GridColumn headerText="Numero" dataField="cc_number" width="150"/>
				<s:GridColumn headerText="Banco" dataField="bank_description"/>
			</s:ArrayList>
		</view:columns>
	</view:CoreDataGrid>
</s:Group>
